    "type": "object",
    "definitions": {
        "bool_or_bool_string": {
            "oneOf": [
                {
                    "type": "boolean"
                },
                {
                    "type": "integer",
                    "minimum": 0
                },
                {
                    "type": "string",
                    "enum": [
                        "0",
                        "1",
                        "false",
                        "true",
                        "False",
                        "True"
                    ]
                }
            ]
        },
        "int_or_hex_string": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 0
                },
                {
                    "type": "string",
                    "pattern": "^\\d+$"
                },
                {
                    "type": "string",
                    "pattern": "^0x[\\da-fA-F]+$"
                }
            ]
        },
        "pow_of_2_int_or_hex_string": {
            "$ref": "#/definitions/int_or_hex_string",
            "enum": [
                1,
                2,
                4,
                8,
                16,
                32,
                64,
                128,
                256,
                512,
                1024,
                2048,
                4096,
                "0x1",
                "0x2",
                "0x4",
                "0x8",
                "0x10",
                "0x20",
                "0x40",
                "0x80",
                "0x100",
                "0x200",
                "0x400",
                "0x800",
                "0x1000"
            ]
        }
